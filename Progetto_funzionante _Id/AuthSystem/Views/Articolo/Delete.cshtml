@model AuthSystem.Models.Articolo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Sei sicuro di voler eliminare questo articolo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeArticolo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeArticolo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descrizione)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TempoProduzione)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempoProduzione)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdArticolo" />
        <div class="form-row">
            <div class="form-group col-md-1">
                <input type="submit" value="Elimina" class="btn btn-danger" />
            </div>
            <div class="form-group col-md-3">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Torna alla lista</a>
            </div>
        </div>
    </form>
</div>
