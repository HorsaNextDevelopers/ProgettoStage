@model AuthSystem.Models.Versamento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Sei sicuro di voler modificare questo versamento?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVersamento" />
            <div class="form-group">
                <label asp-for="NumeroPezzi" class="control-label"></label>
                <input asp-for="NumeroPezzi" class="form-control" />
                <span asp-validation-for="NumeroPezzi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoProd" class="control-label"></label>
                <input asp-for="TempoProd" class="form-control" />
                <span asp-validation-for="TempoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdArticolo" class="control-label"></label>
                <select asp-for="IdArticolo" class="form-control" asp-items="ViewBag.IdArticolo"></select>
                <span asp-validation-for="IdArticolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAspNetUsers" class="control-label"></label>
                <select asp-for="IdAspNetUsers" class="form-control" asp-items="ViewBag.IdAspNetUsers"></select>
                <span asp-validation-for="IdAspNetUsers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Salva" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Torna alla lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
