@model IEnumerable<AuthSystem.Models.Versamenti>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Versamenti</h4>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero_pezzi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tempo_prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articoli)
            </th>
            <th> <a asp-action="Create" class="btn btn-outline-success "><i class="far fa-plus-square"></i>Versamenti</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_pezzi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tempo_prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Articoli.Nome_Articolo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_versamento"><i class="fa fa-marker fa-lg"></i></a> |

                <a asp-action="Delete" asp-route-id="@item.Id_versamento" class="text-danger ml-1" ><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
          
        </tr>
}
    </tbody>
</table>
