@model AuthSystem.Models.Versamenti

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Sei sicuro di voler cancellare questo versamento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numero_pezzi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero_pezzi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tempo_prod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tempo_prod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Articoli)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Articoli.Nome_Articolo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_articolo" />
        <div class="form-row">
            <div class="form-group col-md-1">
                <input type="submit" value="Elimina" class="btn btn-danger" />
            </div>
            <div class="form-group col-md-3">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Torna alla lista</a>
            </div>
        </div>

    </form>
</div>
