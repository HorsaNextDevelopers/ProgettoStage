@model IEnumerable<AuthSystem.Models.Prenotazione>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUsers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postazioni)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postazioni.NomePostazione)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPrenotazione"><i class="fa fa-marker fa-lg"></i></a> |

                    <a asp-action="Delete" asp-route-id="@item.IdPrenotazione" class="text-danger ml-1"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
