@model AuthSystem.Models.Versamento

@{
    ViewData["Title"] = "Crea versamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crea</h1>

<h4>Versamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PezziBuoni" class="control-label"></label>
                <input asp-for="PezziBuoni" class="form-control" />
                <span asp-validation-for="PezziBuoni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PezziDifettosi" class="control-label"></label>
                <input asp-for="PezziDifettosi" class="form-control" />
                <span asp-validation-for="PezziDifettosi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoProd" class="control-label"></label>
                <input asp-for="TempoProd" class="form-control" />
                <span asp-validation-for="TempoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdComponente" class="control-label"></label>
                <select asp-for="IdComponente" class ="form-control" asp-items="ViewBag.IdComponente"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdNomeStazione" class="control-label"></label>
                <select asp-for="IdNomeStazione" class ="form-control" asp-items="ViewBag.IdNomeStazione"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdAspNetUsers" class="control-label"></label>
                <select asp-for="IdAspNetUsers" class ="form-control" asp-items="ViewBag.IdAspNetUsers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
