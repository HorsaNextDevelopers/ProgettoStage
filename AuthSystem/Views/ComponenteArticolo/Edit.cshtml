@model AuthSystem.Models.ComponenteArticolo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Sei sicuro di voler modificare questo componente?</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdComponente" />
            <div class="form-group">
                <label asp-for="NomeComponente" class="control-label"></label>
                <input asp-for="NomeComponente" class="form-control" />
                <span asp-validation-for="NomeComponente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdArticolo" class="control-label"></label>
                <select asp-for="IdArticolo" class="form-control" asp-items="ViewBag.IdArticolo"></select>
                <span asp-validation-for="IdArticolo" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Salva" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Torna alla lista</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}