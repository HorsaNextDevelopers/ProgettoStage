@model AuthSystem.Models.ComponenteArticolo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Sei sicuro di voler eliminare questo componente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeComponente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeComponente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Articoli)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Articoli.NomeArticolo)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdComponente" />
        <div class="form-row">
            <div class="form-group col-md-1">
                <input type="submit" value="Elimina" class="btn btn-danger" />
            </div>
            <div class="form-group col-md-3">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Torna alla lista</a>
            </div>
        </div>
    </form>
</div>
