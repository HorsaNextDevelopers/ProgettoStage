@model IEnumerable<AuthSystem.Models.Postazione>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePostazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descrizione)
            </th>
            <th> <a asp-action="Create" class="btn btn-outline-success "><i class="far fa-plus-square"></i>Postazione</a> </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePostazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPostazione">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPostazione">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPostazione">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
