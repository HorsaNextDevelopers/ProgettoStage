@model AuthSystem.ViewModel.GraficoComponentiViewModel

@{
    ViewData["Title"] = "Grafici";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Grafici componenti</h1>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.js"></script>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">Scegli un articolo: </label>
                <select class="form-control" asp-items="Model.Articoli" id="selectArticoli"></select>
            </div>

            <div>
                <label class="control-label">Scegli un componente: </label>
                <select class="form-control" id="dropdown"></select>
            </div>

            <br/>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" onclick="renderGrafico()"/>
            </div>

            
        </form>
    </div>
</div>
<canvas id="myChart" width="400" height="400"></canvas>

<script>
    $(document).ready(function () {
        getComponenti();

        $("#selectArticoli").change(function () {
            getComponenti();
        });
        var ctx = document.getElementById('myChart').getContext('2d');
        window.myMixedChart = new Chart(ctx, {
            type: 'bar',
            data: {},
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Chart.js Combo Bar Line Chart'
                },
                tooltips: {
                    mode: 'index',
                    intersect: true
                }
            }
        });
    });
</script>

<script>

    function getComponenti() {
        var idArticolo = $("#selectArticoli").val();
        $.ajax({
            url: "GraficiComponenti/GetComponenti?idArticolo=" + idArticolo
        }).done(function (result) {
            $("#dropdown").find('option').remove();
            for (i = 0; i < result.length; i++) {
                $("#dropdown").append('<option value="' + result[i].idArticolo + '">' + result[i].nomeComponente + '</option>');
            }
        });
    }

</script>

<script>
    function renderGrafico() {
        var chartData = {
            labels: ['Versamento1', 'Versamento2', 'Versamento3', 'Versamento4', 'Versamento5', 'Versamento6', 'Versamento7'],
            datasets: [{
                type: 'line',
                label: 'Tempo di produzione ideale',
               // borderColor: window.chartColors.blue,
                borderWidth: 2,
                fill: false,
                data: [
                    10,
                    10,
                    10,
                    10,
                    10,
                    10,
                    10
                ]
            }, {
                type: 'bar',
                label: 'Tempo produzione effettivo',
               // backgroundColor: window.chartColors.red,
                data: [
                   11,
                   15,
                   30,
                   21,
                   43,
                    9,
                    5
                ],
                borderColor: 'white',
                borderWidth: 2
            }]

        };
       /* chartData.datasets.forEach(function (dataset) {
            dataset.data = dataset.data.map(function () {
                return randomScalingFactor();
            });
        });*/
        window.myMixedChart.datasets.push(chartData);
        window.myMixedChart.update();
       
    }

</script>
 
