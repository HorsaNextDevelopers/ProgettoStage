@model AuthSystem.Models.Stazione

@{
    ViewData["Title"] = "Modifica stazione";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modifica</h1>

<h4>Stazione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNomeStazione" />
            <div class="form-group">
                <label asp-for="NomeStazione" class="control-label"></label>
                <input asp-for="NomeStazione" class="form-control" />
                <span asp-validation-for="NomeStazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLinea" class="control-label"></label>
                <select asp-for="IdLinea" class="form-control" asp-items="ViewBag.IdLinea"></select>
                <span asp-validation-for="IdLinea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
