@model IEnumerable<AuthSystem.Models.Stazione>

@{
    ViewData["Title"] = "Stazioni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Stazioni</h1>

<p>
    <a asp-action="Create">Crea nuova stazione</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeStazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeStazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linee.NomeLinea)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNomeStazione"><i class="fa fa-marker fa-lg"></i></a> |

                <a asp-action="Delete" asp-route-id="@item.IdNomeStazione" class="text-danger ml-1"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
