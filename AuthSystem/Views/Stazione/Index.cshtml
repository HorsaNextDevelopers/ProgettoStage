@model IEnumerable<AuthSystem.Models.Stazione>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeStazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeStazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linee.NomeLinea)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNomeStazione">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdNomeStazione">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNomeStazione">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
