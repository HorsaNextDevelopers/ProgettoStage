@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Gestione ruoli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tutti i ruoli</h1>
<p>
    <a asp-action="Create">Crea ruolo</a>
</p>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>Nome</th><th>Utente</th><th>Aggiorna</th><th>Elimina</th></tr>
    @foreach (var role in Model)
    {
<tr>
    <td>@role.Name</td>
    <td i-role="@role.Id"></td>
    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Aggiorna</a></td>
    <td>
        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Elimina
            </button>
        </form>
    </td>
</tr>}
</table>